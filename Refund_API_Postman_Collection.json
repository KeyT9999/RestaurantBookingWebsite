{
  "info": {
    "name": "Restaurant Booking - Refund API",
    "description": "Collection để test các API endpoints cho refund và reconciliation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Check Refund Eligibility",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/payment/{{payment_id}}/refund/check",
          "host": ["{{base_url}}"],
          "path": ["payment", "{{payment_id}}", "refund", "check"]
        },
        "description": "Kiểm tra xem payment có thể hoàn tiền không"
      },
      "response": []
    },
    {
      "name": "2. Get Refundable Payments",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/payment/refundable",
          "host": ["{{base_url}}"],
          "path": ["payment", "refundable"]
        },
        "description": "Lấy danh sách tất cả payments có thể hoàn tiền"
      },
      "response": []
    },
    {
      "name": "3. Process Full Refund",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/payment/{{payment_id}}/refund?reason={{refund_reason}}",
          "host": ["{{base_url}}"],
          "path": ["payment", "{{payment_id}}", "refund"],
          "query": [
            {
              "key": "reason",
              "value": "{{refund_reason}}"
            }
          ]
        },
        "description": "Hoàn tiền toàn bộ cho một payment"
      },
      "response": []
    },
    {
      "name": "4. Process Partial Refund",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/payment/{{payment_id}}/refund/partial?amount={{refund_amount}}&reason={{refund_reason}}",
          "host": ["{{base_url}}"],
          "path": ["payment", "{{payment_id}}", "refund", "partial"],
          "query": [
            {
              "key": "amount",
              "value": "{{refund_amount}}"
            },
            {
              "key": "reason",
              "value": "{{refund_reason}}"
            }
          ]
        },
        "description": "Hoàn tiền một phần cho một payment"
      },
      "response": []
    },
    {
      "name": "5. Get Refund Info",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/payment/{{payment_id}}/refund/info",
          "host": ["{{base_url}}"],
          "path": ["payment", "{{payment_id}}", "refund", "info"]
        },
        "description": "Lấy thông tin chi tiết về refund của một payment"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "payment_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "refund_amount",
      "value": "50000",
      "type": "string"
    },
    {
      "key": "refund_reason",
      "value": "Test refund",
      "type": "string"
    }
  ]
}
